<%- include('../partials/header.ejs')%>

<main>
    <div id="connections">
        <form action = '/users/login' method = 'POST'>
            <table id="account">
                <tr>
                    <td><label for="email">Email Address</label></td>
                    <td><input type="email" id="email" name="email" class = "fixed-width" required></td>
                </tr>
                <tr>
                    <td><label for="password">Password</label></td>
                    <td><input type="password" id="password" name="password" class = "fixed-width" minlength="8" maxlength="64" required></td>
                </tr>
                <tr>
                    <td colspan="2" class = "align-right"><button>Login</button></td>
                </tr>
            </table>        
        </form>
    </div>
</main>

