<%- include('../partials/header.ejs')%>

<main>
    <div id="content">
    <h2>Welcome, <%=user.firstName%></h2>
    <%if(connections.length) {%>
        <p>You have created the following connections</p>
        <%connections.forEach(connection => {%>
            <a href = '/connections/<%= connection.id%>'><p><%=connection.title%></p></a>
        <%});
    } else {%>
        <p>You have not created any connections</p>
    <%}%>
    <%if(rsvps.length) {%>
        <p>Your RSVPs</p>
        <%rsvps.forEach(rsvp => {%>
            <%allConnections.forEach(connection => {%>
                <%if(connection._id.equals(rsvp.event)){ %>
                    <a href = '/connections/<%= rsvp.event%>'><p><%=connection.title%></p></a>
                <% } %>
            <%});%>
        <%});
    } else {%>
        <p>You have not RSVPed to any connections</p>
    <%}%>
    </div>
</main>

<%- include('../partials/footer.ejs')%>