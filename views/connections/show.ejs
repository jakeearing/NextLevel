<%- include('../partials/header.ejs')%>
    <main>
        <div id="connections">
            <h2><%= event.title%></h2>
            <br>
            <img src="<%= event.image%>" class="eventLogo" alt="Event Logo">
            <br>
            <p>Host: <%= event.host.firstName%> <%= event.host.lastName%></p>
            <p>Date: <%= event.date%></p>
            <p>Start Time: <%= event.start%> UTC</p>
            <p>End Time: <%= event.end%> UTC</p>
            <br>
            <p><%= event.location%></p>
            <br>
            <h3>Details</h3>
            <br>
            <p><%= event.description%></p> 
            <br>
            <div class="rsvp">
            <form>
                <button type="submit" value="y" formmethod = "POST" formaction="/connections/<%= event.id%>/rsvp">Yes</button>
                <button type="submit" value="n" formmethod = "POST" formaction="/connections/<%= event.id%>/rsvp">No</button>
                <button type="submit" value="m" formmethod = "POST" formaction="/connections/<%= event.id%>/rsvp">Maybe</button>
            </form>
            </div>
            <%if(user == event.host._id) {%>
            <form>
                <button type="submit" formmethod = "GET" formaction="/connections/<%= event.id%>/edit">Edit</button>
                <button type="submit" formmethod = "POST" formaction = "/connections/<%= event.id%>?_method=DELETE">Delete</button>
            </form>
            <%}%>
        </div>
    </main>
    <%- include('../partials/footer.ejs')%>